@model List<NTierTodoApp.Models.TaskItem>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>إدارة المهام – n-tier</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background: linear-gradient(to right, #4CAF50, #2E8B57);
            color: white;
            text-align: center;
        }
        h1 {
            font-size: 28px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            background: rgba(255, 255, 255, 0.2);
            padding: 15px;
            margin: 8px auto;
            border-radius: 10px;
            width: 60%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: 0.3s;
        }
        li:hover {
            background: rgba(255, 255, 255, 0.4);
        }
        s {
            color: #bbb;
        }
        button {
            background: #8BC34A;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
        }
        button:hover {
            background: #689F38;
        }
        .delete-btn {
            background: #d9534f;
        }
        .delete-btn:hover {
            background: #c9302c;
        }
        input[type="text"] {
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 50%;
        }
        form {
            display: inline;
        }
    </style>
</head>
<body>
    <h1>🟢 قائمة المهام (n-tier) 🟢</h1>
    <ul>
        @foreach (var task in Model)
        {
            <li>
                @if(task.IsComplete)
                {
                    <s>@task.Title</s>
                }
                else
                {
                    @task.Title
                    <form method="post" asp-action="CompleteTask">
                        <input type="hidden" name="id" value="@task.Id" />
                        <button type="submit">✔ اكتملت</button>
                    </form>

                    <form method="post" asp-action="DeleteTask">
                        <input type="hidden" name="id" value="@task.Id" />
                        <button type="submit" class="delete-btn">❌ حذف</button>
                    </form>
                }
            </li>
        }
    </ul>

    <form method="post" asp-action="AddTask">
        <input type="text" name="title" placeholder="✍ أضف مهمة جديدة" required />
        <button type="submit">➕ إضافة</button>
    </form>
</body>
</html>
